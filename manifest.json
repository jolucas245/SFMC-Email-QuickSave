{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "version": "1.0.0",
  "author": "João Ávila",
  "default_locale": "pt_BR",
  "permissions": [
    "activeTab",
    "downloads"
  ],
  "host_permissions": [
    "https://*.exacttarget.com/*",
    "https://*.marketingcloudapps.com/*",
    "https://*.salesforce.com/*",
    "https://*.rest.marketingcloudapis.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; font-src 'self' https://fonts.gstatic.com; style-src 'self' https://fonts.googleapis.com 'unsafe-inline';"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
